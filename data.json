{
  "_comment": "Entity Templates - Supporting both legacy and new flags-based formats",
  "_documentation": {
    "BaseInfo_Legacy_Format": {
      "type": "BaseInfo",
      "symbol": "@",
      "color": 2,
      "name": "Entity Name",
      "is_carryable": 1,
      "_note": "Legacy boolean flags (still supported for backward compatibility)"
    },
    "BaseInfo_New_Format": {
      "type": "BaseInfo", 
      "symbol": "@",
      "color": 2,
      "name": "Entity Name",
      "description": "Detailed description of the entity",
      "weight": 5,
      "volume": 3,
      "flags": 13,
      "_note": "flags is a bitfield: CARRYABLE(1) + ALIVE(16) + CAN_CARRY(4) = 21"
    },
    "Actor_Legacy_Format": {
      "type": "Actor",
      "is_player": 1,
      "can_carry": 1,
      "hp": 100,
      "_note": "Legacy boolean flags (automatically converted to BaseInfo flags)"
    },
    "Actor_New_Format": {
      "type": "Actor", 
      "hp": 100,
      "max_hp": 100,
      "_note": "Boolean flags moved to BaseInfo.flags field"
    },
